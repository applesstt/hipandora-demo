extends layout/layout

block content
  link(rel='stylesheet', href='public/css/time-line.css')
  .wrap
    .wrap-inner
      .time-line.clearfix
        .drag-left
        .time-line-box
          .time-line-inner.clearfix
        .drag-right
      .mt20
        h1 timeLine使用说明
        h2 公共方法
        h3 init(config)
        p 用于初始化时间轴 传递参数config
        h4 config
        .ml10
          h5 afterInsertDay
          h5 afterSetCurDay
          h5 afterDelDay
        h3 setCityName
        p 当修改了某一天的城市名称后，修改时间轴对应点的名称
  script(src='public/js/time-line.js')
  script.
    var cityData = [{
      month: 10,
      day: 1,
      city: '北京'
    }, {
      month: 10,
      day: 2,
      city: '阿维尼翁'
    }, {
      month: 10,
      day: 3,
      city: '尼斯'
    }, {
      month: 10,
      day: 4,
      city: '普罗旺斯'
    }, {
      month: 10,
      day: 5,
      city: '马赛'
    }, {
      month: 10,
      day: 6,
      city: '北京'
    }]
    $(function() {
      timeLine.init({
        data: cityData
      });
    });